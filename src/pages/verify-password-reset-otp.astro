---
// src/pages/verify-password-reset-otp.astro
import CustomerLayout from "../layouts/Layout.astro"; // Adjust to your layout path
import VerifyResetOtpForm from "../components/auth/PasswordResetOtpForm"; // We'll create this next
---

<CustomerLayout title="Verify OTP">
  <section class="auth-page-container">
    {/* Reuse styles from forgot-password.astro */}
    <div class="auth-form-card">
      <img
        class="auth-logo"
        src="/assets/images/logo/logo-new.png"
        alt="Logo"
      />
      <h1 class="auth-title">Verify OTP</h1>
      <p class="auth-subtitle">
        Enter the OTP code sent to your phone number to proceed with password
        reset.
      </p>

      <VerifyResetOtpForm client:load />
    </div>
  </section>
</CustomerLayout>

<style is:global>
  /* Ensure your global styles for .auth-page-container, .auth-form-card etc. are loaded */
  /* You can copy the <style> block from forgot-password.astro if those styles are page-specific */
  /* Or ensure they are in your global CSS file */
  .auth-page-container {
    max-width: 450px;
    margin: 2rem auto;
    padding: 0 1rem;
  }
  .auth-form-card {
    background-color: #fff;
    padding: 2rem 1.5rem;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }
  .auth-logo {
    display: block;
    max-width: 150px;
    margin: 0 auto 1.5rem auto;
  }
  .auth-title {
    text-align: center;
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #1f2937;
  }
  .auth-subtitle {
    text-align: center;
    font-size: 0.9rem;
    color: #4b5563;
    margin-bottom: 1.5rem;
  }
  /* ... include other necessary form styles from forgot-password.astro's <style> block ... */
  .form-item {
    margin-bottom: 1rem;
  }
  .form-label {
    display: block;
    margin-bottom: 0.3rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: #374151;
  }
  .form-input {
    display: block;
    width: 100%;
    padding: 0.6rem 0.75rem;
    font-size: 1rem;
    border: 1px solid #d1d5db;
    border-radius: 4px;
    box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.05);
  }
  .form-input:focus {
    border-color: #f97316;
    outline: none;
    box-shadow: 0 0 0 2px #fdba74;
  }
  .form-message {
    margin-top: 1rem;
    padding: 0.75rem;
    border-radius: 4px;
    font-size: 0.875rem;
    text-align: center;
  }
  .form-message.error {
    color: #991b1b;
    background-color: #fee2e2;
    border: 1px solid #fecaca;
  }
  .form-message.success {
    color: #166534;
    background-color: #dcfce7;
    border: 1px solid #bbf7d0;
  }
  .form-actions {
    margin-top: 1.5rem;
  }
  .submit-button {
    display: block;
    width: 100%;
    padding: 0.7rem 1rem;
    background-color: #f97316;
    color: white;
    border: none;
    border-radius: 6px;
    font-weight: 600;
    font-size: 1rem;
    cursor: pointer;
    transition: background-color 0.15s ease;
  }
  .submit-button:hover:not(:disabled) {
    background-color: #ea580c;
  }
  .submit-button:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }
  .form-footer-link {
    margin-top: 1.5rem;
    text-align: center;
    font-size: 0.875rem;
  }
  .form-footer-link a {
    color: #ea580c;
    text-decoration: underline;
  }
  .form-footer-link a:hover {
    color: #c2410c;
  }
</style>
