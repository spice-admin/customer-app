---
// src/pages/order-selection.astro
import CustomerLayout from "../layouts/Layout.astro"; // Adjust path
import ScheduleAddonDelivery from "../components/checkout/ScheduleAddonDelivery";

import BottomMenu from "../components/home/BottomMenu.astro";
import HeaderwithoutLogo from "../components/home/HeaderwithoutLogo.astro"; // Adjust path

import "../components/checkout/schedule-addon-delivery.css";

import CustomerAppShell from "../components/CustomerAppShell";
---

<CustomerLayout title="Schedule Addon Delivery">
  <div class="site_content">
    <section class="container">
      <HeaderwithoutLogo />
      <div class="page-container schedule-delivery-container">
        <CustomerAppShell pageName="order-selection" client:visible />
      </div>
      <BottomMenu />
      {
        /* Uses globalCartStore, so it's fine outside this specific provider tree */
      }
    </section>
  </div>
</CustomerLayout>

<style is:global>
  .schedule-delivery-container {
    max-width: 700px;
    margin: 20px auto;
    padding: 15px;
    padding-bottom: 150px;
  }
</style>
