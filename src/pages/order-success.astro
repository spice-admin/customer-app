---
// src/pages/order-success.astro
import CustomerLayout from "../layouts/Layout.astro"; // Use your main layout
// Import react-icons if you want to use them here
// import { HiCheckCircle } from 'react-icons/hi2';

// Optional: Get session ID if you want to display it or fetch details later
const sessionId = Astro.url.searchParams.get("session_id");

// TODO: In a future step, you could use the sessionId to fetch
// order details from your backend to display a summary.
// For now, just show a generic success message.
---

<CustomerLayout title="Order Successful">
  <div class="site_content">
    <section class="container">
      {/* You can add a simple header if needed */}
      <div class="section-main text-center py-10 md:py-16">
        {/* Add padding */}

        {
          /* Success Icon (Example using SVG - replace with react-icon if preferred) */
        }
        <svg
          class="success-icon"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="currentColor"
        >
          <path
            fill-rule="evenodd"
            d="M2.25 12c0-5.385 4.365-9.75 9.75-9.75s9.75 4.365 9.75 9.75-4.365 9.75-9.75 9.75S2.25 17.385 2.25 12zm13.36-1.814a.75.75 0 10-1.06-1.06L10.97 12.94l-1.72-1.72a.75.75 0 00-1.06 1.06l2.25 2.25a.75.75 0 001.06 0l4.5-4.5z"
            clip-rule="evenodd"></path>
        </svg>
        {
          /* Example using react-icon:
                <div class="success-icon-wrapper">
                     <HiCheckCircle class="success-icon" client:load />
                </div>
                */
        }

        <h1 class="text-2xl font-bold mt-4 mb-3">Payment Successful!</h1>
        <p class="text-gray-600 mb-6">
          Your order has been placed successfully. Thank you for subscribing!
        </p>
        {
          sessionId && (
            <p class="text-sm text-gray-500 mb-6">
              (Ref: {sessionId.substring(0, 15)}...) {/* Show partial ID */}
            </p>
          )
        }
        <a
          href="/"
          class="get-start-btn"
          style="max-width: 200px; margin: 0 auto;"
        >
          {/* Style button */}
          Back to Home
        </a>
      </div>
    </section>
  </div>
</CustomerLayout>

<style is:global>
  /* Add some basic styling for the success page elements */
  .success-icon {
    width: 60px;
    height: 60px;
    color: #16a34a; /* Example green */
    margin: 0 auto;
  }
  /* Style for react-icon wrapper if used */
  .success-icon-wrapper .success-icon {
    width: 60px;
    height: 60px;
    color: #16a34a;
    margin: 0 auto;
  }
  /* Ensure template button styles apply or add specific ones */
  .get-start-btn {
    /* Styles from your template */
    display: inline-block;
    padding: 10px 20px;
    background-color: orangered;
    color: white;
    text-decoration: none;
    border-radius: 8px;
    text-align: center;
  }
</style>
