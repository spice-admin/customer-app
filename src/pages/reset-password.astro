---
// src/pages/reset-password.astro
import CustomerLayout from "../layouts/Layout.astro"; // Adjust path
import ResetPasswordForm from "../components/auth/ResetPasswordForm.tsx"; // Adjust path
---

<CustomerLayout title="Reset Password">
  <section class="site_content">
    {/* Reuse class */}
    <div class="auth-form-card">
      {/* Reuse class */}
      <img
        class="auth-logo"
        src="/assets/images/logo/logo-new.png"
        alt="Logo"
      />
      <h1 class="auth-title">Set New Password</h1>
      <p class="auth-subtitle">
        Please enter and confirm your new password below.
      </p>

      {/* Render the React form */}
      <ResetPasswordForm client:load />
    </div>
  </section>
</CustomerLayout>

<style is:global>
  /* Ensure styles for auth-page-container, auth-form-card, etc. are loaded */
  /* Ensure styles for form-item, form-label, form-input, form-message, submit-button are loaded */
</style>
