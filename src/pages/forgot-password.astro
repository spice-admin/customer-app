---
// src/pages/forgot-password.astro
import CustomerLayout from "../layouts/Layout.astro"; // Adjust path
import ForgotPasswordForm from "../components/auth/ForgotPasswordForm.tsx"; // Adjust path
---

<CustomerLayout title="Forgot Password">
  <section class="auth-page-container">
    <div class="auth-form-card">
      {/* Optional wrapper card */}
      <img
        class="auth-logo"
        src="/assets/images/logo/logo-new.png"
        alt="Logo"
      />
      <h1 class="auth-title">Reset Password</h1>
      <p class="auth-subtitle">
        Enter your registered phone number to receive an OTP code.
      </p>

      {/* Render the React form */}
      <ForgotPasswordForm client:load />
    </div>
  </section>
</CustomerLayout>

<style>
  /* Basic styles - Place in global.css or scoped here */
  .auth-page-container {
    max-width: 450px;
    margin: 2rem auto;
    padding: 0 1rem;
  }
  .auth-form-card {
    background-color: #fff;
    padding: 2rem 1.5rem;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }
  .auth-logo {
    display: block;
    max-width: 150px; /* Adjust size */
    margin: 0 auto 1.5rem auto;
  }
  .auth-title {
    text-align: center;
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #1f2937;
  }
  .auth-subtitle {
    text-align: center;
    font-size: 0.9rem;
    color: #4b5563;
    margin-bottom: 1.5rem;
  }

  /* Styles for ForgotPasswordForm elements (add to global or here) */
  .forgot-password-form .form-item {
    margin-bottom: 1rem;
  }
  .forgot-password-form .form-label {
    display: block;
    margin-bottom: 0.3rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: #374151;
  }
  .forgot-password-form .form-input {
    display: block;
    width: 100%;
    padding: 0.6rem 0.75rem;
    font-size: 1rem;
    border: 1px solid #d1d5db;
    border-radius: 4px;
    box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.05);
  }
  .forgot-password-form .form-input:focus {
    border-color: #f97316;
    outline: none;
    box-shadow: 0 0 0 2px #fdba74;
  }

  .form-message {
    margin-top: 1rem;
    padding: 0.75rem;
    border-radius: 4px;
    font-size: 0.875rem;
    text-align: center;
  }
  .form-message.error {
    color: #991b1b; /* Darker red text */
    background-color: #fee2e2; /* Light red bg */
    border: 1px solid #fecaca; /* Red border */
  }
  .form-message.success {
    color: #166534; /* Darker green text */
    background-color: #dcfce7; /* Light green bg */
    border: 1px solid #bbf7d0; /* Green border */
  }

  .form-actions {
    margin-top: 1.5rem;
  }
  .submit-button {
    /* Style like other primary buttons */
    display: block;
    width: 100%;
    padding: 0.7rem 1rem;
    background-color: #f97316; /* Orange */
    color: white;
    border: none;
    border-radius: 6px;
    font-weight: 600;
    font-size: 1rem;
    cursor: pointer;
    transition: background-color 0.15s ease;
  }
  .submit-button:hover:not(:disabled) {
    background-color: #ea580c;
  }
  .submit-button:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }

  .form-footer-link {
    margin-top: 1.5rem;
    text-align: center;
    font-size: 0.875rem;
  }
  .form-footer-link a {
    color: #ea580c;
    text-decoration: underline;
  }
  .form-footer-link a:hover {
    color: #c2410c;
  }
</style>
